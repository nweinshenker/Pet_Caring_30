<body>

    <h1><%= title%></h1>

    <div class="wrapper">

    <form id="html_form" role="form" method="post" action="/findCare">
    
        <div class="form-group">
            <label for="day">Day</label>
            <input id="datepicker" width="276" />
            <script>
                $('#datepicker').datepicker({
                    uiLibrary: 'bootstrap4'
                });
            </script>
        </div>
        <button type="hidden" id="myButton" class="btn btn-primary" >Find Available CareTakers</button>
    </form>


    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-dog"></i> &nbsp; CareTaker List
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>CareTake Id</th>
                            <th>Price</th>
                            <th>Review</th>
                        </tr>
                    </thead>
                    <tfoot>
                    </tfoot>
                    <tbody>
                        <% for(var i=0; i<tbl.length; i++) { %>
                        <tr>
                            <td><%= tbl[i].caretakerid%></td>
                            <td><%= tbl[i].price%></td>
                            <td><%= tbl[i].review%></td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted"><span class="badge badge-pill badge-info"></span></div>
    </div>
    



