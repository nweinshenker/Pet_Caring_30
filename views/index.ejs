    <!-- Introduction to the User guide-->
      <header class="masthead bg-primary text-white text-center">
        <div class="container">
          <img class="img-fluid mb-5 d-block mx-auto" src="images/cute_golden.jpeg" alt="">
          <h1 class="text-uppercase mb-0">Pet Caring</h1>
